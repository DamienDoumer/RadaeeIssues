<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RadaeePDFIssue.MainPage">

    <Grid RowDefinitions="*,*">

        <Button Text="Download The Book First"
                Clicked="Button_Clicked_1"
                x:Name="BookDownloadButton"/>

        <Button Clicked="Button_Clicked" Text="Open Radaee PDF Reader"
                x:Name="ReadBookButton"
                IsEnabled="False"
                HorizontalOptions="Center"
                Grid.Row="1"
                VerticalOptions="Center"/>
    </Grid>

</ContentPage>
